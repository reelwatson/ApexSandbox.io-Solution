public boolean isSorted(List<Integer> numbers) {
    //code here
    Boolean sortedSomehow = false;

    //Create two new lists to hold copies of numbers
    List<Integer> ascendingNumbers = new List<Integer>(numbers);
    ascendingNumbers.sort();

    List<Integer> descendingNumbers = new List<Integer>();

    //Reverse ascending List to create descending List
    for (Integer i = ascendingNumbers.size() - 1; i >= 0; i--) {
            descendingNumbers.add(ascendingNumbers[i]);    
        }
        
    if ((numbers.equals(ascendingNumbers)) || (numbers.equals(descendingNumbers))) {
        sortedSomehow = true;
    }

    return sortedSomehow;
}

