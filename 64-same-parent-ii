public Boolean sameParent(Account acc, Contact con, Opportunity opp) {
    //code here
    Boolean sameParent = false;
    if (opp.AccountId != null && con.AccountId != null && acc != null && con.AccountId == opp.AccountId && acc.Id == opp.AccountId) {
        sameParent = true;
    }
    return sameParent;
}